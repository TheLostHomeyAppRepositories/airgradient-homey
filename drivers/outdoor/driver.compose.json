{
  "name": {
    "en": "Outdoor Monitor"
  },
  "class": "sensor",
  "capabilities": [
    "measure_pm1",
    "measure_pm25",
    "measure_pm10",
    "measure_co2",
    "measure_pm03_cnt",
    "measure_temperature",
    "measure_humidity",
    "measure_voc",
    "measure_voc_idx",
    "measure_nox",
    "measure_nox_idx"
  ],
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png"
  },
  "pair": [
      {
          "id": "list_my_devices",
          "template": "list_devices",
          "navigation": {
              "next": "add_my_devices"
          }
      },
      {
          "id": "add_my_devices",
          "template": "add_devices"
      }
  ],
  "settings": [
    {
      "id": "ipaddress",
      "type": "text",
      "label": {
        "en": "IP address"
      }
    },
    {
      "id": "use_pm25_corrected",
      "type": "checkbox",
      "label": {
        "en": "Use Corrected Value for PM25"
      },
      "value": true
    },
    {
      "id": "use_temperature_corrected",
      "type": "checkbox",
      "label": {
        "en": "Use Corrected Value for Temperature"
      },
      "value": true
    },
    {
      "id": "use_humidity_corrected",
      "type": "checkbox",
      "label": {
        "en": "Use Corrected Value for Humidity"
      },
      "value": true
    }
  ]
}