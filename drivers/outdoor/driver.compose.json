{
  "name": {
    "en": "Outdoor Monitor"
  },
  "class": "sensor",
  "capabilities": [
    "measure_pm1",
    "measure_pm25",
    "measure_pm10",
    "measure_co2",
    "measure_pm3_cnt",
    "measure_temperature",
    "measure_humidity",
    "measure_voc",
    "measure_voc_idx",
    "measure_nox",
    "measure_nox_idx"
  ],
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png"
  },
  "pair": [
      {
          "id": "list_my_devices",
          "template": "list_devices",
          "navigation": {
              "next": "add_my_devices"
          }
      },
      {
          "id": "add_my_devices",
          "template": "add_devices"
      }
  ]
}